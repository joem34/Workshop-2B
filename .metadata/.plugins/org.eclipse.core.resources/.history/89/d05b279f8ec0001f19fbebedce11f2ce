package network

object Network {
	
	val entryPoints : Set[EntryPoint] = Set()
	val exitPoints : Set[ExitPoint] = Set()

	val routes : Map[EntryPoint,ExitPoint] = setUpRoutes
	
	def routeStartsWith(entryPoint:EntryPoint):Boolean
		= routes.contains(entryPoint)
	
	def setUpAccessPoints :	Set[EntryPoint] = {
		entryPoints + new EntryPoint(1, "London")
		entryPoints + new EntryPoint(2, "Paris")
	}
		
	def setUpRoutes : Map[EntryPoint,ExitPoint] = {

		val r : Map[EntryPoint,ExitPoint] = Map()
		
		r += (entryPoints.find(_.getName=="London"), 
				exitPoints.find(_.getName=="Paris"))
				
	}

}
package network

object Network {
	
	var entryPoints : Set[EntryPoint] = Set()
	var exitPoints : Set[ExitPoint] = Set()

	val routes : Map[EntryPoint,ExitPoint] = setUpRoutes
	
	def routeStartsWith(entryPoint:EntryPoint):Boolean
		= routes.contains(entryPoint)
	

		
	def setUpRoutes : Map[EntryPoint,ExitPoint] = {

		var r : Map[EntryPoint,ExitPoint] = Map()
		
		var entry = new EntryPoint(1, "London")
		var exit = new ExitPoint(2, "Paris")
		entryPoints += entry
		exitPoints += exit
		
	}
		
		return r
				
	}

}